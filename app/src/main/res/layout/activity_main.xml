<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spicecanvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firework.virtualdesktop.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spice Client" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage|textPostalAddress"
        android:hint="Server IP Address"
        android:ems="10"
        android:layout_below="@id/textView"
        android:layout_marginTop="33dp"
        android:id="@+id/ipText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/ConnectBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/SettingBtn"
        android:layout_alignStart="@+id/SettingBtn" />

    <Button
        android:text="Advanced Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/SettingBtn"
        android:layout_above="@+id/ConnectBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/UsernameText"
        android:layout_below="@+id/VMPortText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/passwordText"
        android:selectAllOnFocus="false"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/UsernameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SettingBtn"
        android:layout_marginBottom="21dp"
        android:id="@+id/resultView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="VM Port"
        android:ems="10"
        android:id="@+id/VMPortText"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ipText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
